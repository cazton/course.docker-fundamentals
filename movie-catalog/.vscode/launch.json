{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local Launch",
            "args": [],
            "cwd": "${workspaceFolder}/src/MovieCatalog.Web",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "development",
                "ASPNETCORE_URLS": "http://+:4000"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "args": "http://localhost:4000/api/values",
                "enabled": true,
                "linux": {
                    "command": "xdg-open"
                },
                "osx": {
                    "command": "open"
                },
                "windows": {
                    "args": "/C start http://localhost:4000/api/values",
                    "command": "cmd.exe"
                }
            },
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/MovieCatalog.Web/bin/Debug/netcoreapp2.1/MovieCatalog.Web.dll",
            "request": "launch",
            "sourceFileMap": {
                "/src": "${workspaceFolder}/src"
            },
            "stopAtEntry": false,
            "type": "coreclr"
        },
        {
            "name": "Docker Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "compose-for-debug",
            "cwd": "/app",
            "program": "/app/MovieCatalog.Web.dll",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "container",
                "ASPNETCORE_URLS": "http://+:4000",
                "REMOTE_DEBUGGING": "true"
            },
            "sourceFileMap": {
                "/": "${workspaceRoot}"
            },
            "launchBrowser": {
                "enabled": true,
                "args": "http://localhost:4000/api/values",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start http://localhost:4000/api/values"
                },
                "osx": {
                    "command": "open"
                }
            },
            "pipeTransport": {
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeProgram": "docker",
                "pipeCwd": "${workspaceRoot}",
                "pipeArgs": [
                    "exec -i movie-catalog"
                ],
                "quoteArgs": false
            }
        }
    ]
}
